<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/addfriend_layout_background"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingTop="?android:attr/actionBarSize" >

    <TextView
        android:id="@+id/txt_addfriend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="New Friend!"
        android:textColor="#EF5428"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_addfriend_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_addfriend_title"
        android:contentDescription="@string/hello_world"
        android:padding="10dp"
        android:src="@drawable/phonesnearby" />

    <TextView
        android:id="@+id/txt_addfriend_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_addfriend_phone"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Place smartphones close together and wait for a few seconds..."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/layout_addfriend_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_addfriend_desc"
        android:background="@drawable/addfriend_layout_search"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/progressbar"
            android:padding="10dp" />

        <TextView
            android:id="@+id/txt_addfriend_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Searching..."
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_addfriend_my_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_addfriend_search"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="My device ID:"
        android:textColor="#000000"
        android:textSize="12sp" />

</RelativeLayout>