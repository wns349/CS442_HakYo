<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/img_bg_road"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitXY"
        android:src="@drawable/bg_road" />

    <Space
        android:id="@+id/space_center"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <Space
        android:id="@+id/space_center_below"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/space_center" />

    <Space
        android:id="@+id/space_center_sun"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_above="@id/space_center"
        android:layout_alignStart="@id/space_center" />

    <Space
        android:id="@+id/space_RB_corner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/img_character_loc_01"
        android:layout_width="30dp"
        android:layout_height="43dp"
        android:layout_alignTop="@id/space_center_sun"
        android:layout_toEndOf="@id/space_center_sun"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/c0" />

    <ImageView
        android:id="@+id/img_character_loc_02"
        android:layout_width="50dp"
        android:layout_height="71dp"
        android:layout_alignTop="@id/space_center"
        android:layout_toStartOf="@id/space_center"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/c1" />

    <ImageView
        android:id="@+id/img_character_loc_03"
        android:layout_width="75dp"
        android:layout_height="107dp"
        android:layout_alignTop="@id/space_center_below"
        android:layout_toEndOf="@id/space_center"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/c2" />

    <ImageView
        android:id="@+id/img_character_loc_04"
        android:layout_width="120dp"
        android:layout_height="171dp"
        android:layout_below="@id/space_center_below"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/c3" />

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:layout_alignBottom="@id/space_RB_corner"
        android:layout_alignEnd="@id/space_RB_corner" >

        <ImageView
            android:id="@+id/img_character_loc_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/hello_world"
            android:scaleType="matrix"
            android:src="@drawable/c4" />
    </RelativeLayout>
    <!--  -->

</RelativeLayout>